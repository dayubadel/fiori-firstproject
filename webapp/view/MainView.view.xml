<mvc:View controllerName="dayana.invoice.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content> 
            <Panel id="panel" headerText="{i18n>selectionScreen}">
                <Label id="labelShipName" text="{i18n>shipName}" class="sapUiSmallMargin"/>
                <Input id="shipName" value="{selectionScreen>/ShipName}" width="200px" class="sapUiSmallMarginEnd"/>
                <Label id="labelCountry" text="{i18n>country}" class="sapUiSmallMargin"/>
                <Select id="slCountry" selectedKey="{selectionScreen>/CountryKey}" 
                    forceSelection="false" 
                    items="{selectionScreen>/Countries}">
                    <items>
                        <core:Item id="items" key="{selectionScreen>key}" text="{selectionScreen>text}"/>
                    </items>
                </Select>
                <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://filter" press="onFilter" class="sapUiSmallMarginEnd"/>
                <Button id="btnClearFilters" text="{i18n>btnClearFilters}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
            </Panel>
            <Panel id="panel2">
                <List id="invoicesList" headerText="{i18n>invoicesHeaderList}" class="SapUiResponsiveMargin" width="auto" items="{/Invoices}">
                    <items>
                        <ObjectListItem id="objectListItem" title="{ShipName} - {Country}" 
                        number="{parts : [ {path: 'ExtendedPrice'}, {path: 'selectionScreen>/Currency'}],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions:{
                                    showMeasure : false
                                } }"
                        numberUnit="{selectionScreen>/Currency}"></ObjectListItem>
                    </items>
                </List>
                
            </Panel>
        </content>
    </Page>
</mvc:View>
